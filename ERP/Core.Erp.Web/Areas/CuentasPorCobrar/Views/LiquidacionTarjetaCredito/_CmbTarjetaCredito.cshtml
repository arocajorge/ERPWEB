@using System.Web.UI.WebControls;
@{
    var comboBox = Html.DevExpress().ComboBox(settings =>
    {
        settings.Name = "IdTarjeta";
        settings.Width = Unit.Percentage(100);
        settings.Properties.DropDownWidth = Unit.Percentage(100);
        settings.Properties.DropDownStyle = DropDownStyle.DropDown;
        settings.CallbackRouteValues = new { Controller = "LiquidacionTarjetaCredito", Action = "CmbTarjetaCredito", Area = "CuentasPorCobrar" };
        settings.Properties.CallbackPageSize = 15;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.TextField = "NombreTarjeta";
        settings.Properties.TextFormatString = "[{0}] {1}";
        settings.Properties.ValueField = "IdTarjeta";
        settings.Properties.ValueType = typeof(int);

        settings.Properties.ClearButton.DisplayMode = ClearButtonDisplayMode.Always;
        settings.Properties.AllowNull = true;

        settings.Properties.Columns.Add("IdTarjeta", "ID", 10);
        settings.Properties.Columns.Add("NombreTarjeta", "NombreTarjeta", 20);
    })
    .BindList(new Core.Erp.Web.Areas.CuentasPorCobrar.Controllers.LiquidacionTarjetaCreditoController().get_list_bajo_demanda, new Core.Erp.Web.Areas.CuentasPorCobrar.Controllers.LiquidacionTarjetaCreditoController().get_info_bajo_demanda)
    .Bind(Model.GetType() == typeof(Core.Erp.Info.CuentasPorCobrar.cxc_LiquidacionTarjeta_Info) ? "" : Model);

}
@comboBox.GetHtml()
