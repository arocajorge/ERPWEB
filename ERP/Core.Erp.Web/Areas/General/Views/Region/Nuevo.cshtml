@model Core.Erp.Info.General.tb_region_Info
@{
    ViewBag.Title = "Nueva región";
    if (Session["IdUsuario"] == null || Session["IdEmpresa"] == null)
    {
        Response.Redirect("~/Account/Login");
    }
}

@using (Html.BeginForm("Nuevo","Region",FormMethod.Post, new { @class = "form", @role = "form" }))
{
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="codigo">Código</label>
                    @Html.TextBoxFor(m => m.codigo, new { @class = "form-control" })
                </div>                
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="Nom_region">Región*</label>
                    @Html.TextBoxFor(m=>m.Nom_region, new { @class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Nom_region, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="box-footer">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a class="btn btn-default" href="@Url.Action("Index","Region",new { Area = "General" },null)">Cancelar</a>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
}