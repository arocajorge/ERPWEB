@using System.Web.UI.WebControls;
@{
    var comboBox = Html.DevExpress().ComboBox(settings =>
    {
        settings.Name = "IdEntidad";
        settings.Width = Unit.Percentage(100);
        settings.Properties.DropDownWidth = Unit.Percentage(100);
        settings.Properties.DropDownStyle = DropDownStyle.DropDown;
        settings.CallbackRouteValues = new { Controller = "NotaDeDebitoBanco", Action = "CmbPersona_DebitoBanco", Area = "Banco" };
        settings.Properties.CallbackPageSize = 15;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.TextField = "pe_nombreCompleto";
        settings.Properties.TextFormatString = "{1}";
        settings.Properties.ValueField = "IdEntidad";
        settings.Properties.ValueType = typeof(decimal);
        settings.Properties.ClearButton.DisplayMode = ClearButtonDisplayMode.Always;
        settings.Properties.Columns.Add("IdEntidad", "ID", 10);
        settings.Properties.Columns.Add("pe_nombreCompleto", "Persona", 80);
        settings.Properties.Columns.Add("IdPersona", "ID Persona", 10);

        settings.Properties.ClientSideEvents.BeginCallback = "function(s, e) { e.customArgs['IdTipoPersona'] = $('#IdTipo_Persona').val(); }";
        settings.Properties.ClientSideEvents.SelectedIndexChanged = "function(s,e) {$('#cb_giradoA').val(s.GetText()); vaciar_detalles();}";
    })
    .BindList(new Core.Erp.Web.Areas.Banco.Controllers.NotaDeDebitoBancoController().get_list_bajo_demanda, new Core.Erp.Web.Areas.Banco.Controllers.NotaDeDebitoBancoController().get_info_bajo_demanda)
    .Bind(Model.IdEntidad);

}
@comboBox.GetHtml()