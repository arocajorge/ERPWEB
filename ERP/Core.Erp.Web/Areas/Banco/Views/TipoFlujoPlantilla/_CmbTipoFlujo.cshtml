@using System.Web.UI.WebControls;
@{
    var comboBox = Html.DevExpress().ComboBox(settings =>
    {
        settings.Name = "IdTipoFlujo";
        settings.Width = Unit.Percentage(100);
        settings.Properties.DropDownWidth = Unit.Percentage(100);
        settings.Properties.DropDownStyle = DropDownStyle.DropDown;
        settings.CallbackRouteValues = new { Controller = "TipoFlujoPlantilla", Action = "CmbTipoFlujo", Area = "Banco" };
        settings.Properties.CallbackPageSize = 15;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.TextField = "Descricion";
        settings.Properties.TextFormatString = "[{0}] {1}";
        settings.Properties.ValueField = "IdTipoFlujo";
        settings.Properties.ValueType = typeof(decimal);
        settings.Properties.Columns.Add("IdTipoFlujo", "ID", 10);
        settings.Properties.Columns.Add("Descricion", "Descripción", 90);
        settings.Properties.ClearButton.DisplayMode = ClearButtonDisplayMode.Always;
    })
     .BindList(new Core.Erp.Web.Areas.Banco.Controllers.TipoFlujoPlantillaController().get_list_bajo_demanda_tipoflujo, new Core.Erp.Web.Areas.Banco.Controllers.TipoFlujoPlantillaController().get_info_bajo_demanda_tipoflujo)
    .Bind((Model.GetType() == typeof(Core.Erp.Info.Banco.ba_TipoFlujo_Info) || Model.GetType() == typeof(Core.Erp.Info.Banco.ba_TipoFlujo_PlantillaDet_Info) || Model.GetType() == typeof(List<Core.Erp.Info.Banco.ba_TipoFlujo_PlantillaDet_Info>)) ? "" : Model);
    }
@comboBox.GetHtml()