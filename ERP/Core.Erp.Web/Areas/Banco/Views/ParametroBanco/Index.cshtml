               }).BindList(ViewBag.lst_cta).GetHtml()
                    @Html.ValidationMessageFor(q => q.IdCtaCble_Interes, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="box-footer">
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
}
