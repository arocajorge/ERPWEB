                   settings.Properties.DropDownStyle = DropDownStyle.DropDown;
               }).BindList(ViewBag.lst_cta).GetHtml()
                    @Html.ValidationMessageFor(q => q.IdCtaCble_prestamos, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="IdCtaCble_Interes">Cuenta contable por interés</label>
                    @Html.DevExpress().ComboBoxFor(q => q.IdCtaCble_Interes, settings =>
               {
                   settings.Name = "IdCtaCble_Interes";
