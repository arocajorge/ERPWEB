@using System.Web.UI.WebControls;
@{
    var comboBox = Html.DevExpress().ComboBox(settings =>
    {
        settings.Name = "IdTipo_Gasto_Padre";
        settings.Width = Unit.Percentage(100);
        settings.Properties.DropDownWidth = Unit.Percentage(100);
        settings.Properties.DropDownStyle = DropDownStyle.DropDown;
        settings.CallbackRouteValues = new { Controller = "GrupoPorTipoGasto", Action = "CmbCuenta_TipoGastoPadre", Area = "Contabilidad" };
        settings.Properties.CallbackPageSize = 15;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.TextField = "nom_tipo_Gasto";
        settings.Properties.TextFormatString = "[{0}] {1}";
        settings.Properties.ValueField = "IdTipo_Gasto";
        settings.Properties.ValueType = typeof(int);
        settings.Properties.Columns.Add("IdTipo_Gasto", "ID", 10);
        settings.Properties.Columns.Add("nom_tipo_Gasto", "Tipo gasto", 40);
        settings.Properties.Columns.Add("IdTipo_Gasto_Padre", "ID Padre", 10);
        settings.Properties.Columns.Add("nom_tipo_Gasto_Padre", "Tipo gasto padre", 40);
        settings.Properties.ClientSideEvents.SelectedIndexChanged = "function(s,e,){get_info_nuevo()}";

    })
    .BindList(new Core.Erp.Web.Areas.Contabilidad.Controllers.GrupoPorTipoGastoController().get_list_bajo_demanda, new Core.Erp.Web.Areas.Contabilidad.Controllers.GrupoPorTipoGastoController().get_info_bajo_demanda)
    .Bind(Model.IdTipo_Gasto_Padre);


}
@comboBox.GetHtml()
