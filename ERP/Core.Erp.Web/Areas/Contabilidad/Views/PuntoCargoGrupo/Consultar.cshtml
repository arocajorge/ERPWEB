@model Core.Erp.Info.Contabilidad.ct_punto_cargo_grupo_Info
@{
    ViewBag.Title = "Consultar grupo de punto de cargo";
    if (string.IsNullOrEmpty(Core.Erp.Web.Helps.SessionFixed.IdUsuario) || string.IsNullOrEmpty(Core.Erp.Web.Helps.SessionFixed.IdEmpresa))
    {
        Response.Redirect("~/Account/Login");
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/ValidacionBotonSubmit.js"></script>

@using (Html.BeginForm("Consultar", "PuntoCargoGrupo", FormMethod.Post, new { @class = "form", @role = "form" }))
{
    if (ViewBag.MensajeSuccess != null)
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h4>
                <i class="icon fa fa-check"></i> @ViewBag.MensajeSuccess
            </h4>
        </div>
    }
    @Html.HiddenFor(q => q.IdEmpresa)
    @Html.HiddenFor(q => q.IdPunto_cargo_grupo)
    @Html.HiddenFor(q => q.Nuevo, new { @id = "Nuevo" })
    @Html.HiddenFor(q => q.Modificar, new { @id = "Modificar" })
    @Html.HiddenFor(q => q.Anular, new { @id = "Anular" })
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-offset-9 col-md-1">
                <div class="form-group">
                    <div id="btnNuevo" hidden>
                        <a type="button" class="btn btn-primary form-control" title="Nuevo" href="@Url.Action("Nuevo", "PuntoCargoGrupo", new { Area = "Contabilidad", IdEmpresa = Model.IdEmpresa }, null)">
                            <i class="fa fa-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-1">
                <div class="form-group">
                    <div id="btnModificar" hidden>
                        <a type="button" class="btn btn-primary form-control" title="Modificar" href="@Url.Action("Modificar", "PuntoCargoGrupo", new { Area = "Contabilidad", IdEmpresa = Model.IdEmpresa, IdPunto_cargo_grupo = Model.IdPunto_cargo_grupo }, null)">
                            <i class="fa fa-edit"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-1">
                <div class="form-group">
                    <div id="btnAnular" hidden>
                        <a type="button" class="btn btn-primary form-control" title="Anular" href="@Url.Action("Anular", "PuntoCargoGrupo", new { Area = "Contabilidad", IdEmpresa = Model.IdEmpresa, IdPunto_cargo_grupo = Model.IdPunto_cargo_grupo }, null)">
                            <i class="fa fa-remove"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="cod_Punto_cargo_grupo">Código*</label>
                    @Html.TextBoxFor(q => q.cod_Punto_cargo_grupo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(q => q.cod_Punto_cargo_grupo, "", new { @class = "form", @role = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="nom_punto_cargo_grupo">Descripción*</label>
                    @Html.TextBoxFor(q => q.nom_punto_cargo_grupo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(q => q.nom_punto_cargo_grupo, "", new { @class = "form", @role = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="box-footer">
        <a class="btn btn-default" href="@Url.Action("Index","PuntoCargoGrupo",new { Area = "Contabilidad" },null)">Cancelar</a>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
}
<script type="text/javascript">
    $(function () {
        MostrarBotonesAccion();
    });

    function MostrarBotonesAccion() {
        if ($("#Nuevo").val() == 1) {
            $("#btnNuevo").show();
        }
        if ($("#Modificar").val() == 1) {
            $("#btnModificar").show();
        }
        if ($("#Anular").val() == 1) {
            $("#btnAnular").show();
        }
    }
</script>

