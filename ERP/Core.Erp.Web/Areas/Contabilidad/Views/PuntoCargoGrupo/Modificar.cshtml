@model Core.Erp.Info.Contabilidad.ct_punto_cargo_grupo_Info
@{
    ViewBag.Title = "Modificar punto cargo grupo";
    if (string.IsNullOrEmpty(Core.Erp.Web.Helps.SessionFixed.IdUsuario) || string.IsNullOrEmpty(Core.Erp.Web.Helps.SessionFixed.IdEmpresa))
    {
        Response.Redirect("~/Account/Login");
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/ValidacionBotonSubmit.js"></script>

@using (Html.BeginForm("Modificar", "PuntoCargoGrupo", FormMethod.Post, new { @class = "form", @role = "form" }))
{
    @Html.HiddenFor(q => q.IdEmpresa)
    @Html.HiddenFor(q => q.IdPunto_cargo_grupo)
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="cod_Punto_cargo_grupo">Código*</label>
                    @Html.TextBoxFor(q => q.cod_Punto_cargo_grupo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(q => q.cod_Punto_cargo_grupo, "", new { @class = "form", @role = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="nom_punto_cargo_grupo">Descripción*</label>
                    @Html.TextBoxFor(q => q.nom_punto_cargo_grupo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(q => q.nom_punto_cargo_grupo, "", new { @class = "form", @role = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="box-footer">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a class="btn btn-default" href="@Url.Action("Index","PuntoCargoGrupo",new { Area = "Contabilidad" },null)">Cancelar</a>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
}

