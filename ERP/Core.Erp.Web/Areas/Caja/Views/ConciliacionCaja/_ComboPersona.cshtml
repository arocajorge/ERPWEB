@using System.Web.UI.WebControls;
@model Core.Erp.Info.Caja.cp_conciliacion_Caja_Info
@Html.DevExpress().ComboBox(
    settings =>
    {
        settings.Name = "IdEntidad";
        settings.Width = Unit.Percentage(100);
        settings.Properties.DropDownWidth = 350;
        settings.Properties.DropDownStyle = DropDownStyle.DropDown;
        settings.CallbackRouteValues = new { Controller = "ConciliacionCaja", Action = "ComboPersona", Area = "Caja" };
        settings.Properties.CallbackPageSize = 30;
        settings.Properties.TextField = "pe_nombreCompleto";
        settings.Properties.TextFormatString = "[{0}] {1}";
        settings.Properties.ValueField = "IdPersona";
        settings.Properties.ValueType = typeof(decimal);
        settings.Properties.FilterMinLength = 0;

        settings.Properties.Columns.Add("IdPersona", "ID", 10);
        settings.Properties.Columns.Add("pe_nombreCompleto", "Persona", 90);
    }
).BindList(ViewBag.lst_personas).BindList().Bind(Model == null ? 0 : Model.IdEntidad).GetHtml()

