@using System.Web.UI.WebControls;
@{
    var comboBox = Html.DevExpress().ComboBox(settings =>
    {
        settings.Name = "IdEntidad";
        settings.Width = Unit.Percentage(100);
        settings.Properties.DropDownWidth = Unit.Percentage(100);
        settings.Properties.DropDownStyle = DropDownStyle.DropDown;
        settings.CallbackRouteValues = new { Controller = "ConciliacionCaja", Action = "CmbPersona_ConciliacionCaja", Area = "Caja" };
        settings.Properties.CallbackPageSize = 5;
        settings.Properties.DropDownRows = 4;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.TextField = "pe_nombreCompleto";
        settings.Properties.TextFormatString = "[{0}] {1}";
        settings.Properties.ValueField = "IdPersona";
        settings.Properties.ValueType = typeof(decimal);

        settings.Properties.Columns.Add("IdPersona", "ID", 10);
        settings.Properties.Columns.Add("pe_nombreCompleto", "Persona", 90);

        //settings.Properties.ClientSideEvents.EndCallback = "OnEndCallbackCombo";
    }).BindList(new Core.Erp.Bus.General.tb_persona_Bus().get_list_bajo_demanda, new Core.Erp.Bus.General.tb_persona_Bus().get_info_bajo_demanda);
}
@comboBox.GetHtml()