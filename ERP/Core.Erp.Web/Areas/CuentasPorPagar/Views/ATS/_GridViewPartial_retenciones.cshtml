@using System.Web.UI.WebControls;
@{
    var grid = Html.DevExpress().GridView(settings => {
        settings.Name = "GridViewPartial_retenciones";
        settings.CallbackRouteValues = new { Controller = "ATS", Action = "GridViewPartial_retenciones", Area = "CuentasPorPagar" };
