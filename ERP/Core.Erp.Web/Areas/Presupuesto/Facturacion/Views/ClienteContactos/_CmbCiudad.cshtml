@using System.Web.UI.WebControls;
@{
        var comboBox = Html.DevExpress().ComboBox(settings =>
        {
            settings.Name = "IdCiudad";
            settings.Width = Unit.Percentage(100);
            settings.Properties.DropDownWidth = Unit.Percentage(100);
            settings.Properties.DropDownStyle = DropDownStyle.DropDown;
            settings.CallbackRouteValues = new { Controller = "ClienteContactos", Action = "CmbCiudad", Area = "Facturacion" };
            settings.Properties.CallbackPageSize = 15;
            settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
            settings.Properties.TextField = "Descripcion_Ciudad";
            settings.Properties.TextFormatString = "[{0}] {1}";
            settings.Properties.ValueField = "IdCiudad";
            settings.Properties.ValueType = typeof(string);
            settings.Properties.Columns.Add("IdCiudad", "ID", 10);
            settings.Properties.Columns.Add("Descripcion_Ciudad", "Ciudad", 90);
            settings.Properties.FilterMinLength = 3;
        })
         .BindList(new Core.Erp.Web.Areas.Facturacion.Controllers.ClienteContactosController().get_list_bajo_demanda_ciudad, new Core.Erp.Web.Areas.Facturacion.Controllers.ClienteContactosController().get_info_bajo_demanda_ciudad)
    .Bind((Model.GetType() == typeof(Core.Erp.Info.Facturacion.fa_cliente_contactos_Info) || Model.GetType() == typeof(Core.Erp.Info.Facturacion.fa_cliente_contactos_Info) ) ? "" : Model);
    }
@comboBox.GetHtml()