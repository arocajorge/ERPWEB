@using System.Web.UI.WebControls;
@{
    var comboBox = Html.DevExpress().ComboBox(settings =>
    {
        settings.Name = "IdUsuario";
        settings.Width = Unit.Percentage(100);
        settings.Properties.DropDownWidth = Unit.Percentage(100);
        settings.Properties.DropDownStyle = DropDownStyle.DropDown;
        settings.CallbackRouteValues = new { Controller = "GrupoPresupuesto", Action = "CmbUsuario_Grupo", Area = "Presupuesto" };
        settings.Properties.CallbackPageSize = 15;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.TextField = "Nombre";
        settings.Properties.TextFormatString = "[{0}] {1}";
        settings.Properties.ValueField = "IdUsuario";
        settings.Properties.ValueType = typeof(string);
        settings.Properties.Columns.Add("IdUsuario", "ID", 10);
        settings.Properties.Columns.Add("Nombre", "Nombre", 90);
        settings.Properties.ClearButton.DisplayMode = ClearButtonDisplayMode.Always;
        settings.Properties.NullText = "== Seleccione ==";
        settings.Properties.DropDownStyle = DropDownStyle.DropDown;
        settings.Properties.FilterMinLength = 3;

    })
    .BindList(new Core.Erp.Web.Areas.Presupuesto.Controllers.GrupoPresupuestoController().get_list_bajo_demanda, new Core.Erp.Web.Areas.Presupuesto.Controllers.GrupoPresupuestoController().get_info_bajo_demanda)
    .Bind(Model.GetType() == typeof(Core.Erp.Info.Presupuesto.pre_Grupo_Info) ? "" : (Model == null ? "" : Model));


}
@comboBox.GetHtml()
