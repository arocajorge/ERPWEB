@using System.Web.UI.WebControls;
@{
    var comboBox = Html.DevExpress().ComboBox(settings =>
    {
        settings.Name = "IdCtaCble_Anticipo";
        settings.Width = Unit.Percentage(100);
        settings.Properties.DropDownWidth = Unit.Percentage(100);
        settings.Properties.DropDownStyle = DropDownStyle.DropDown;
        settings.CallbackRouteValues = new { Controller = "ClienteTipo", Action = "CmbCuenta_Anticipo", Area = "Facturacion" };
        settings.Properties.CallbackPageSize = 15;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.TextField = "pc_Cuenta";
        settings.Properties.TextFormatString = "[{0}] {1}";
        settings.Properties.ValueField = "IdCtaCble";
        settings.Properties.ValueType = typeof(string);
        settings.Properties.Columns.Add("IdCtaCble", "ID", 10);
        settings.Properties.Columns.Add("pc_Cuenta", "Cuenta", 40);
        settings.Properties.Columns.Add("IdCtaCblePadre", "ID Padre", 10);
        settings.Properties.Columns.Add("pc_Cuenta_padre", "Cuenta padre", 40);
        settings.Properties.FilterMinLength = 3;
    })
     .BindList(new Core.Erp.Web.Areas.Facturacion.Controllers.ClienteTipoController().get_list_bajo_demanda, new Core.Erp.Web.Areas.Facturacion.Controllers.ClienteTipoController().get_info_bajo_demanda)    
    .Bind(Model.GetType() == typeof(Core.Erp.Info.Facturacion.fa_cliente_tipo_Info) ? "" : (Model == "" ? "" : Model));
    }
@comboBox.GetHtml()