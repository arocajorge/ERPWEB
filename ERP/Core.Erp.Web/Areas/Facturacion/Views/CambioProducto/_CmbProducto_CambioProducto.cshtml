@using System.Web.UI.WebControls;
@{
            var comboBox = Html.DevExpress().ComboBox(settings =>
            {
                settings.Name = "IdProductoCambio";
                settings.Width = Unit.Percentage(100);
                settings.Properties.DropDownWidth = Unit.Percentage(100);
                settings.Properties.DropDownStyle = DropDownStyle.DropDown;
                settings.CallbackRouteValues = new { Controller = "CambioProducto", Action = "CmbProducto_CambioProducto", Area = "Facturacion" };
                settings.Properties.CallbackPageSize = 15;
                settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
                settings.Properties.TextField = "pr_descripcion";
                settings.Properties.TextFormatString = "[{0}] {1}";
                settings.Properties.ValueField = "IdProducto";
                settings.Properties.ValueType = typeof(decimal);

                settings.Properties.ClearButton.DisplayMode = ClearButtonDisplayMode.Always;
                settings.Properties.AllowNull = true;

                settings.Properties.Columns.Add("IdProducto", "ID", 5);
                settings.Properties.Columns.Add("pr_descripcion", "Producto", 65);
                settings.Properties.Columns.Add("nom_categoria", "Categoria", 15);
                settings.Properties.Columns.Add("nom_presentacion", "Presentación", 15);
                settings.Properties.FilterMinLength = 3;
            })
            .BindList(new Core.Erp.Web.Areas.Facturacion.Controllers.CambioProductoController().get_list_bajo_demandaProducto,
            new Core.Erp.Web.Areas.Facturacion.Controllers.CambioProductoController().get_info_bajo_demandaProducto).Bind((Model.GetType() == typeof(Core.Erp.Info.Facturacion.fa_CambioProductoDet_Info) || Model.GetType() == typeof(List<Core.Erp.Info.Facturacion.fa_CambioProductoDet_Info>)) ? "" : (Model == 0 ? "" : Model));
}
@comboBox.GetHtml()