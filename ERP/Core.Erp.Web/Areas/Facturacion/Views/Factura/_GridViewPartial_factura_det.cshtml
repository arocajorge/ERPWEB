<script type="text/javascript">
    function SetPrecioProducto(s, e) {
        var datos = {
            IdProducto: s.GetValue(),
            IdNivel: $('#IdNivel').val(),
            IdCliente: IdCliente.GetValue()
        }
        $.ajax({
            type: 'POST',
            data: JSON.stringify(datos),
            url: '@Url.Action("SetPrecioProducto", "Producto",new { Area = "Inventario" })',
            async: false,
            bDeferRender: true,
            bProcessing: true,
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                GridView_factura_det.GetEditor('vt_Precio').SetValue(data.precio);
                GridView_factura_det.GetEditor('IdCod_Impuesto_Iva').SetValue(data.IdCodImpuesto);
                GridView_factura_det.GetEditor('vt_DescUnitario').SetValue(data.PorcentajeDesc);
            },
            error: function (error) {
            }
        });
    };

    function CalcularValores(s, e) {
        var datos = {
            Cantidad: GridView_factura_det.GetEditor('vt_cantidad').GetValue(),
            Precio: GridView_factura_det.GetEditor('vt_Precio').GetValue(),
            IdCodImpuesto: GridView_factura_det.GetEditor('IdCod_Impuesto_Iva').GetValue(),
            PorcentajeDesc: GridView_factura_det.GetEditor('vt_PorDescUnitario').GetValue()
        }
        $.ajax({
            type: 'POST',
            data: JSON.stringify(datos),
            url: '@Url.Action("CalcularValores", "Factura",new { Area = "Facturacion" })',
            async: false,
            bDeferRender: true,
            bProcessing: true,
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                GridView_factura_det.GetEditor('vt_Subtotal_item').SetValue(data.subtotal);
                GridView_factura_det.GetEditor('vt_iva_item').SetValue(data.iva);
                GridView_factura_det.GetEditor('vt_total_item').SetValue(data.total);
            },
            error: function (error) {
            }
        });
    };
</script>