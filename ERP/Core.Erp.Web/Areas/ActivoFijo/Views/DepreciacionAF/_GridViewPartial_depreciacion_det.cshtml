@using System.Web.UI.WebControls;
@model Core.Erp.Info.ActivoFijo.Af_Depreciacion_Info
@{
    var grid = Html.DevExpress().GridView(settings => {
        settings.Name = "GridView_depreciacion_det";
        settings.CallbackRouteValues = new { Controller = "DepreciacionAF", Action = "GridViewPartial_depreciacion_det", IdDepreciacion = Model == null ? 0 : Model.IdDepreciacion };
        settings.KeyFieldName = "Secuencia";
        settings.Width = Unit.Percentage(100);

        settings.CommandColumn.Visible = false;

        settings.SettingsPager.Visible = true;
        settings.Settings.ShowGroupPanel = false;
        settings.SettingsBehavior.AllowSelectByRowClick = true;
        settings.SettingsAdaptivity.AdaptivityMode = GridViewAdaptivityMode.Off;
        settings.SettingsAdaptivity.AdaptiveColumnPosition = GridViewAdaptiveColumnPosition.Right;
        settings.SettingsAdaptivity.AllowOnlyOneAdaptiveDetailExpanded = false;
        settings.SettingsAdaptivity.HideDataCellsAtWindowInnerWidth = 0;


        settings.Columns.Add("nom_tipo","Tipo").Width = Unit.Percentage(20);
        settings.Columns.Add("nom_categoria","Categoría").Width = Unit.Percentage(20);
        settings.Columns.Add("Af_Nombre","Activo").Width = Unit.Percentage(30);
        settings.Columns.Add("Valor_Compra","Valor compra").Width = Unit.Percentage(10);
        settings.Columns.Add("Valor_Depreciacion","Valor depreciación").Width = Unit.Percentage(10);
        settings.Columns.Add("Valor_Depre_Acum","Valor depr. acumulada").Width = Unit.Percentage(10);
    });
}
@grid.Bind(Model.lst_detalle).GetHtml()