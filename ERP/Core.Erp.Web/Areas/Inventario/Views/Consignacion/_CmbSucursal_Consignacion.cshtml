
@using System.Web.UI.WebControls;
@{
    var comboBox = Html.DevExpress().ComboBox(settings =>
    {
        settings.Name = "IdSucursal";
        settings.Width = Unit.Percentage(100);
        settings.Properties.DropDownWidth = Unit.Percentage(100);
        settings.Properties.DropDownStyle = DropDownStyle.DropDown;
        settings.CallbackRouteValues = new { Controller = "Consignacion", Action = "CmbSucursal_Consignacion", Area = "Inventario" };
        settings.Properties.CallbackPageSize = 15;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.TextField = "su_Descripcion";
        settings.Properties.TextFormatString = "[{0}] {1} {2}";
        settings.Properties.ValueField = "IdSucursal";
        settings.Properties.ValueType = typeof(decimal);
        settings.Properties.ClearButton.DisplayMode = ClearButtonDisplayMode.Always;
        settings.Properties.NullText = "== Seleccione ==";
        settings.Properties.ClientSideEvents.SelectedIndexChanged = "function(s,e){get_list_tipo_doc();}";

        settings.Properties.Columns.Add("IdSucursal", "ID", 10);
        settings.Properties.Columns.Add("codigo", "Codigo", 20);
        settings.Properties.Columns.Add("su_Descripcion", "Sucursal", 70);
        settings.Properties.FilterMinLength = 3;

    })
    .BindList(new Core.Erp.Web.Areas.Inventario.Controllers.ConsignacionController().get_list_bajo_demanda_sucursal, new Core.Erp.Web.Areas.Inventario.Controllers.ConsignacionController().get_info_bajo_demanda_sucursal)
    .Bind(Model.GetType() == typeof(Core.Erp.Info.Inventario.in_Consignacion_Info) ? "" : (Model == 0 ? "" : Model));

}
@comboBox.GetHtml()