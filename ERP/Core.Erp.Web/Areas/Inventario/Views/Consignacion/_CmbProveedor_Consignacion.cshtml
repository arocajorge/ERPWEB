
@using System.Web.UI.WebControls;
@{
    var comboBox = Html.DevExpress().ComboBox(settings =>
    {
        settings.Name = "IdProveedor";
        settings.Width = Unit.Percentage(100);
        settings.Properties.DropDownWidth = Unit.Percentage(100);
        settings.Properties.DropDownStyle = DropDownStyle.DropDown;
        settings.CallbackRouteValues = new { Controller = "Consignacion", Action = "CmbProveedor_Consignacion", Area = "Inventario" };
        settings.Properties.CallbackPageSize = 15;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.TextField = "pe_nombreCompleto";
        settings.Properties.TextFormatString = "[{0}] {1} {2}";
        settings.Properties.ValueField = "IdEntidad";
        settings.Properties.ValueType = typeof(decimal);
        settings.Properties.ClearButton.DisplayMode = ClearButtonDisplayMode.Always;
        settings.Properties.NullText = "== Seleccione ==";

        settings.Properties.Columns.Add("IdEntidad", "ID", 10);
        settings.Properties.Columns.Add("pe_cedulaRuc", "RUC", 20);
        settings.Properties.Columns.Add("pe_nombreCompleto", "Proveedor", 70);
        settings.Properties.FilterMinLength = 3;

    })
    .BindList(new Core.Erp.Web.Areas.Inventario.Controllers.ConsignacionController().get_list_bajo_demanda_proveedor, new Core.Erp.Web.Areas.Inventario.Controllers.ConsignacionController().get_info_bajo_demanda_proveedor)
    .Bind(Model.GetType() == typeof(Core.Erp.Info.Inventario.in_Consignacion_Info) ? "" : (Model == 0 ? "" : Model));

}
@comboBox.GetHtml()