@model Core.Erp.Info.RRHH.ro_rubro_tipo_Info

@{
    ViewBag.Title = "Modificar rubro";
}

@using (Html.BeginForm("Modificar", "Rubro", FormMethod.Post, new { @class = "form", @role = "form" }))
{
    @Html.HiddenFor(q => q.IdRubro)
    @Html.HiddenFor(q => q.IdEmpresa)

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-2">
                <div class="form-group">
                    <label for="rub_codigo">Código*</label>
                    @Html.TextBoxFor(q => q.rub_codigo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(q => q.rub_codigo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-2">
                <div class="form-group">
                    <label for="ru_codRolGen">Código reporte*</label>
                    @Html.TextBoxFor(q => q.ru_codRolGen, new { @class = "form-control" })
                    @Html.ValidationMessageFor(q => q.ru_codRolGen, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="rub_grupo">Grupo*</label>
                    @Html.DropDownListFor(q => q.rub_grupo, new SelectList(ViewBag.lst_grupo, "IdCatalogo", "ca_descripcion"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(q => q.rub_grupo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="rub_tipcal">Tipo campo*</label>
                    @Html.DropDownListFor(q => q.rub_tipcal, new SelectList(ViewBag.lst_tipo_campo, "IdCatalogo", "ca_descripcion"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(q => q.rub_tipcal, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="ru_tipo">Tipo rubro*</label>
                    @Html.DropDownListFor(q => q.ru_tipo, new SelectList(ViewBag.lst_tipo_rubro, "CodCatalogo", "ca_descripcion"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(q => q.ru_tipo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="IdCtaCblePadre">Cuenta contable</label>
                    @Html.DevExpress().ComboBoxFor(q => q.rub_ctacon, settings =>
               {
                   settings.Name = "rub_ctacon";
                   settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
                   settings.Properties.DisplayFormatString = "[{0}] - {1}";
                   settings.Properties.Columns.Add("IdCtaCble", "Código").Width = System.Web.UI.WebControls.Unit.Percentage(10);
                   settings.Properties.Columns.Add("pc_Cuenta", "Cuenta").Width = System.Web.UI.WebControls.Unit.Percentage(50);
                   settings.Properties.Columns.Add("pc_Cuenta_padre", "Cuenta padre").Width = System.Web.UI.WebControls.Unit.Percentage(40);
                   //Campo ID
                   settings.Properties.ValueField = "IdCtaCble";
                   settings.Properties.ValueType = typeof(string);
                   settings.Properties.TextField = "pc_Cuenta";
                   //Boton para seleccionar ningun registro
                   settings.Properties.ClearButton.DisplayMode = ClearButtonDisplayMode.Always;
                   settings.Properties.NullText = "== Seleccione ==";
                   settings.Properties.DropDownStyle = DropDownStyle.DropDown;

               }).BindList(ViewBag.lst_plancuenta).GetHtml()
                    @Html.ValidationMessageFor(q => q.rub_ctacon, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="ru_descripcion">Descripción*</label>
                    @Html.TextBoxFor(q => q.ru_descripcion, new { @class = "form-control" })
                    @Html.ValidationMessageFor(q => q.ru_descripcion, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="NombreCorto">Descripción corta</label>
                    @Html.TextBoxFor(q => q.NombreCorto, new { @class = "form-control" })
                    @Html.ValidationMessageFor(q => q.NombreCorto, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="rub_concep">¿Es un concepto?</label>
                    @Html.EditorFor(q => q.rub_concep, new { @class = "form-control" })
                    @Html.ValidationMessageFor(q => q.rub_concep, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="rub_noafecta">¿Afecta rol preliminar?</label>
                    @Html.EditorFor(q => q.rub_noafecta, new { @class = "form-control" })
                    @Html.ValidationMessageFor(q => q.rub_noafecta, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="rub_guarda_rol">¿Se guarda en rol?</label>
                    @Html.EditorFor(q => q.rub_guarda_rol, new { @class = "form-control" })
                    @Html.ValidationMessageFor(q => q.rub_guarda_rol, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="rub_aplica_IESS">¿Aplica IESS?</label>
                    @Html.EditorFor(q => q.rub_aplica_IESS, new { @class = "form-control" })
                    @Html.ValidationMessageFor(q => q.rub_aplica_IESS, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="box-footer">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a class="btn btn-default" href="@Url.Action("Index","Rubro",new { Area = "RRHH" },null)">Cancelar</a>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
}


