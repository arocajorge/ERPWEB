@model Core.Erp.Info.RRHH.ro_rubro_tipo_Info

@{
    ViewBag.Title = "Anular rubro";
}
@using (Html.BeginForm("Anular", "Rubro", FormMethod.Post, new { @class = "form", @role = "form" }))
{
    @Html.HiddenFor(q => q.IdRubro)
    @Html.HiddenFor(q => q.IdEmpresa)


    <div class="row">
        <div class="col-md-12">
            <div class="col-md-2">
                <div class="form-group">
                    <label for="NumDocumento">Código*</label>
                    @Html.TextBoxFor(q => q.rub_codigo, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-2">
                <div class="form-group">
                    <label for="NumDocumento">Código reporte*</label>
                    @Html.TextBoxFor(q => q.ru_codRolGen, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="IdContrato_Tipo">Grupo*</label>
                    @Html.DropDownListFor(q => q.rub_grupo, new SelectList(ViewBag.lst_grupo, "IdCatalogo", "ca_descripcion"), "== Seleccione ==", new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="IdContrato_Tipo">Tipo campo*</label>
                    @Html.DropDownListFor(q => q.rub_tipcal, new SelectList(ViewBag.lst_tipo_campo, "IdCatalogo", "ca_descripcion"), "== Seleccione ==", new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="IdContrato_Tipo">Tipo rubro*</label>
                    @Html.DropDownListFor(q => q.ru_tipo, new SelectList(ViewBag.lst_tipo_rubro, "CodCatalogo", "ca_descripcion"), "== Seleccione ==", new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="IdCtaCblePadre">Cuenta contable</label>
                    @Html.DevExpress().ComboBoxFor(q => q.rub_ctacon, settings =>
               {
                   settings.Name = "rub_ctacon";
                   settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
                   settings.Properties.DisplayFormatString = "[{0}] - {1}";
                   settings.Properties.Columns.Add("IdCtaCble", "Código").Width = System.Web.UI.WebControls.Unit.Percentage(10);
                   settings.Properties.Columns.Add("pc_Cuenta", "Cuenta").Width = System.Web.UI.WebControls.Unit.Percentage(50);
                   settings.Properties.Columns.Add("pc_Cuenta_padre", "Cuenta padre").Width = System.Web.UI.WebControls.Unit.Percentage(40);
                   //Campo ID
                   settings.Properties.ValueField = "IdCtaCble";
                   settings.Properties.ValueType = typeof(string);
                   settings.Properties.TextField = "pc_Cuenta";
                   //Boton para seleccionar ningun registro
                   settings.Properties.ClearButton.DisplayMode = ClearButtonDisplayMode.Always;
                   settings.Properties.NullText = "== Seleccione ==";
                   settings.Properties.DropDownStyle = DropDownStyle.DropDown;

               }).BindList(ViewBag.lst_plancuenta).GetHtml()
                    @Html.ValidationMessageFor(q => q.rub_ctacon, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="NumDocumento">Descripción*</label>
                    @Html.TextBoxFor(q => q.ru_descripcion, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="NumDocumento">Descripción corta</label>
                    @Html.TextBoxFor(q => q.NombreCorto, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="NumDocumento">¿Es un concepto?</label>
                    @Html.EditorFor(q => q.rub_concep, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="NumDocumento">¿Afecta rol preliminar?</label>
                    @Html.EditorFor(q => q.rub_noafecta, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="NumDocumento">¿Se guarda en rol?</label>
                    @Html.EditorFor(q => q.rub_guarda_rol, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="NumDocumento">¿Aplica IESS?</label>
                    @Html.EditorFor(q => q.rub_aplica_IESS, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>
    </div>

    <div class="box-footer">
        <button type="submit" class="btn btn-danger">Guardar</button>
        <a class="btn btn-default" href="@Url.Action("Index","Rubro",new { Area = "RRHH" },null)">Cancelar</a>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
}


