@model Core.Erp.Info.RRHH.ro_turno_Info
@{
    ViewBag.Title = "Anular turno";
    if (string.IsNullOrEmpty(Core.Erp.Web.Helps.SessionFixed.IdUsuario) || string.IsNullOrEmpty(Core.Erp.Web.Helps.SessionFixed.IdEmpresa))
    {
        Response.Redirect("~/Account/Login");
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/ValidacionBotonSubmit.js"></script>
@using (Html.BeginForm("Anular", "Turno", FormMethod.Post, new { @class = "form", @role = "form" }))
{
    @Html.HiddenFor(q => q.IdTurno)
    @Html.HiddenFor(q => q.IdEmpresa)
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="Nombre">Descripción*</label>
                    @Html.TextBoxFor(q => q.tu_descripcion, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    @Html.DevExpress().CheckBoxFor(q => q.Lunes, settings =>
                    {
                        settings.Name = "Lunes";
                        settings.Text = "Lunes";

                    }).GetHtml()
                    @Html.ValidationMessageFor(q => q.Lunes, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    @Html.DevExpress().CheckBoxFor(q => q.Martes, settings =>
                    {
                        settings.Name = "Martes";
                        settings.Text = "Martes";

                    }).GetHtml()
                    @Html.ValidationMessageFor(q => q.Martes, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    @Html.DevExpress().CheckBoxFor(q => q.Miercoles, settings =>
                    {
                        settings.Name = "Miercoles";
                        settings.Text = "Miércoles";

                    }).GetHtml()
                    @Html.ValidationMessageFor(q => q.Miercoles, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    @Html.DevExpress().CheckBoxFor(q => q.Jueves, settings =>
                    {
                        settings.Name = "Jueves";
                        settings.Text = "Jueves";

                    }).GetHtml()
                    @Html.ValidationMessageFor(q => q.Jueves, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    @Html.DevExpress().CheckBoxFor(q => q.Viernes, settings =>
                    {
                        settings.Name = "Viernes";
                        settings.Text = "Viernes";

                    }).GetHtml()
                    @Html.ValidationMessageFor(q => q.Viernes, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    @Html.DevExpress().CheckBoxFor(q => q.Sabado, settings =>
                    {
                        settings.Name = "Sabado";
                        settings.Text = "Sábado";

                    }).GetHtml()
                    @Html.ValidationMessageFor(q => q.Sabado, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    @Html.DevExpress().CheckBoxFor(q => q.Domingo, settings =>
                    {
                        settings.Name = "Domingo";
                        settings.Text = "Domingo";

                    }).GetHtml()
                    @Html.ValidationMessageFor(q => q.Domingo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="box-footer">
        <button type="submit" class="btn btn-danger">Anular</button>
        <a class="btn btn-default" href="@Url.Action("Index","Cargo",new { Area = "RRHH" },null)">Cancelar</a>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
}
