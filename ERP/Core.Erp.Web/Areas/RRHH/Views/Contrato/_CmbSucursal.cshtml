@using System.Web.UI.WebControls;
@{
    var comboBox = Html.DevExpress().ComboBox(settings =>
    {
        settings.Name = "IdSucursal";
        settings.Width = Unit.Percentage(100);
        settings.Properties.DropDownWidth = Unit.Percentage(100);
        settings.Properties.DropDownStyle = DropDownStyle.DropDown;
        settings.CallbackRouteValues = new { Controller = "Contrato", Action = "CmbSucursal", Area = "RRHH" };
        settings.Properties.CallbackPageSize = 15;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.TextField = "Su_Descripcion";
        settings.Properties.TextFormatString = "[{0}] {1}";
        settings.Properties.ValueField = "IdSucursal";
        settings.Properties.ValueType = typeof(int);
        settings.Properties.Columns.Add("IdSucursal", "ID", 10);
        settings.Properties.Columns.Add("Su_Descripcion", "Sucursal", 90);
        settings.Properties.ClearButton.DisplayMode = ClearButtonDisplayMode.Always;
    })
      .BindList(new Core.Erp.Web.Areas.RRHH.Controllers.ContratoController().get_list_bajo_demanda_sucursal, new Core.Erp.Web.Areas.RRHH.Controllers.ContratoController().get_info_bajo_demanda_sucursal)
    .Bind(Model.GetType() == typeof(Core.Erp.Info.RRHH.ro_contrato_Info) ? "" : (Model == 0 ? "" : Model));
    }
@comboBox.GetHtml()