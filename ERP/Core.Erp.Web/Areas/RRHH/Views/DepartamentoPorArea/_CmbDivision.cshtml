@using System.Web.UI.WebControls;
@{
    var comboBox = Html.DevExpress().ComboBox(settings =>
    {
        settings.Name = "IdDivision";
        settings.Width = Unit.Percentage(100);
        settings.Properties.DropDownWidth = Unit.Percentage(100);
        settings.Properties.DropDownStyle = DropDownStyle.DropDown;
        settings.CallbackRouteValues = new { Controller = "Empleado", Action = "CmbDivision", Area = "RRHH" };
        settings.Properties.CallbackPageSize = 15;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.TextField = "Descripcion";
        settings.Properties.TextFormatString = "[{0}] {1}";
        settings.Properties.ValueField = "IdDivision";
        settings.Properties.ValueType = typeof(int);
        settings.Properties.Columns.Add("IdDivision", "ID", 10);
        settings.Properties.Columns.Add("Descripcion", "Descripción", 90);
        settings.Properties.ClearButton.DisplayMode = ClearButtonDisplayMode.Always;
    })
     .BindList(new Core.Erp.Web.Areas.RRHH.Controllers.DepartamentoPorAreaController().get_list_bajo_demanda_division, new Core.Erp.Web.Areas.RRHH.Controllers.DepartamentoPorAreaController().get_info_bajo_demanda_division)
    .Bind((Model.GetType() == typeof(Core.Erp.Info.RRHH.ro_area_x_departamento_Info) || Model.GetType() == typeof(Core.Erp.Info.RRHH.ro_area_x_departamento_Info) ) ? "" : Model);
    }
@comboBox.GetHtml()