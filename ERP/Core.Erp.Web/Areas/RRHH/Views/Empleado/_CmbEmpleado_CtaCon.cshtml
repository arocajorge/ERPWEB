@using System.Web.UI.WebControls;
@{
    var comboBox = Html.DevExpress().ComboBox(settings =>
    {
        settings.Name = "IdCtaCble_Emplea";
        settings.Width = Unit.Percentage(100);
        settings.Properties.DropDownWidth = Unit.Percentage(100);
        settings.Properties.DropDownStyle = DropDownStyle.DropDown;
        settings.CallbackRouteValues = new { Controller = "Empleado", Action = "CmbEmpleado_CtaCon", Area = "RRHH" };
        settings.Properties.CallbackPageSize = 15;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.TextField = "pc_Cuenta";
        settings.Properties.TextFormatString = "[{0}] {1}";
        settings.Properties.ValueField = "IdCtaCble";
        settings.Properties.ValueType = typeof(string);
        settings.Properties.Columns.Add("IdCtaCble", "ID", 10);
        settings.Properties.Columns.Add("pc_Cuenta", "Cuenta", 90);
        settings.Properties.FilterMinLength = 3;

    })
     .BindList(new Core.Erp.Web.Areas.RRHH.Controllers.EmpleadoController().get_list_bajo_demanda, new Core.Erp.Web.Areas.RRHH.Controllers.EmpleadoController().get_info_bajo_demanda)
    .Bind((Model.GetType() == typeof(Core.Erp.Info.RRHH.ro_empleado_Info) || Model.GetType() == typeof(Core.Erp.Info.Contabilidad.ct_cbtecble_Info)) ? "" : Model);

}
@comboBox.GetHtml()
