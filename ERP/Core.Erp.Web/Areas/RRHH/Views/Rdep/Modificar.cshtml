                    @Html.ValidationMessageFor(q => q.pe_anio, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="IdNomina">Tipo de Nómina</label>
                    @Html.DropDownListFor(q => q.IdNomina_Tipo, new SelectList(ViewBag.lst_nomina_tipo, "IdNomina_Tipo", "Descripcion"), new { @class = "form-control", @id = "IdNomina_Tipo", @disabled = "disabled" })
                    @Html.ValidationMessageFor(q => q.IdNomina_Tipo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="Valor">Sueldos y salarios</label>
                    @Html.TextBoxFor(q => q.Sueldo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(q => q.Sueldo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="Valor">Sobresueldos, comisiones, bonos y otras remuneraciones</label>
                    @Html.TextBoxFor(q => q.IngresoVarios, new { @class = "form-control" })
                    @Html.ValidationMessageFor(q => q.IngresoVarios, "", new { @class = "text-danger" })
                </div>
            </div>
